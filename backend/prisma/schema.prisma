// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Client {
  id               String   @id @default(uuid())
  name             String
  razaoSocial      String?
  cnpj_cpf         String   @unique
  dataCriacao      String?  // Armazenado como string para facilitar importação do XML
  status           String   @default("ativado")
  inscricaoEstadual String?
  emailPrincipal   String?
  telefonePrincipal String?
  cep              String?
  estado           String?
  cidade           String?
  endereco         String?
  numero           String?
  bairro           String?
  complemento      String?
  nomeContato      String?
  emailContato     String?
  dataAniversario  String?
  observacoes      String?  @db.Text
  
  // Enriched fields from Sales data
  totalVendas      Decimal? @db.Decimal(10, 2)
  dataUltimaVenda  String?
  salesCount       Int?     @default(0)

  orders           Order[]
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  @@index([name])
  @@index([razaoSocial])
}

model Order {
  id               String   @id @default(uuid())
  sequentialId     Int      @unique @default(autoincrement())
  date             DateTime @default(now())
  clientId         String
  client           Client   @relation(fields: [clientId], references: [id])
  title            String   // Nome do áudio/arquivo
  fileName         String?  // Nome técnico do arquivo (ex: spot_final.mp3)
  locutor          String   // Nome do locutor (texto livre para histórico)
  locutorId        String?  // Link opcional para o novo modelo de Locutor
  locutorObj       Locutor? @relation(fields: [locutorId], references: [id])
  tipo             String   // OFF or PRODUZIDO
  
  supplierId       String?
  supplier         Supplier? @relation(fields: [supplierId], references: [id])

  cacheValor       Decimal  @db.Decimal(10, 2)
  vendaValor       Decimal  @db.Decimal(10, 2)
  comentarios      String?  @db.Text
  
  status           String   @default("PEDIDO") // PEDIDO, VENDA
  urgency          String   @default("NORMAL") // NORMAL, ALTA, URGENTE
  numeroVenda      Int?     @unique // Rastreabilidade com o CSV/Sistema antigo - Código da VENDA
  
  faturado         Boolean  @default(false)
  entregue         Boolean  @default(false)
  cachePago        Boolean  @default(false)
  
  // Financeiro extra
  dispensaNF       Boolean  @default(false)
  emiteBoleto      Boolean  @default(false)
  dataFaturar      DateTime?
  vencimento       DateTime?
  pago             Boolean  @default(false)
  statusEnvio      String   @default("PENDENTE") // PENDENTE, ENVIADO

  pendenciaFinanceiro Boolean @default(false)
  pendenciaMotivo     String? @db.Text
  numeroOS            String?
  arquivoOS           String?
  serviceType         String?  // PLANO MENSAL, PACOTE DE AUDIOS, STREAMING, etc.

  // Supplier Credit System
  creditsConsumed     Int      @default(0) // Default 0 for normal orders, 1+ for Supplier orders
  costPerCreditSnapshot Decimal? @db.Decimal(10, 2) // Snapshot of the cost at the time of order

  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  @@index([date])
  @@index([status])
  @@index([faturado])
  @@index([clientId])
}

model Locutor {
  id              String   @id @default(uuid())
  name            String
  realName        String?
  phone           String?
  email           String?
  status          String   @default("DISPONIVEL") // DISPONIVEL, INDISPONIVEL, FERIAS
  reelsUrl        String?
  priceOff        Decimal  @db.Decimal(10, 2) @default(0)
  priceProduzido  Decimal  @db.Decimal(10, 2) @default(0)
  valorFixoMensal Decimal? @db.Decimal(10, 2)
  chavePix        String?
  tipoChavePix    String?
  banco           String?
  description     String?  @db.Text
  orders          Order[]
  
  suppliers       Supplier[] @relation("LocutorSuppliers")

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model ServiceType {
  id        String   @id @default(uuid())
  name      String   @unique
  createdAt DateTime @default(now())
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String?
  role      Role     @default(USER)
  tierId    String?
  tier      Tier?    @relation(fields: [tierId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role {
  ADMIN
  USER
}

model Supplier {
  id        String   @id @default(uuid())
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  locutores       Locutor[] @relation("LocutorSuppliers")
  packages        CreditPackage[]
  orders          Order[]
}

model CreditPackage {
  id              String   @id @default(uuid())
  supplierId      String
  supplier        Supplier @relation(fields: [supplierId], references: [id])
  name            String   // Ex: Pacote Janeiro
  price           Decimal  @db.Decimal(10, 2)
  credits         Int
  costPerCredit   Decimal  @db.Decimal(10, 4) // High precision for internal calculation
  purchaseDate    DateTime @default(now())
  
  createdAt       DateTime @default(now())
}

model Tier {
  id                String   @id @default(uuid())
  name              String   @unique
  
  // Permissions
  accessDashboard   Boolean  @default(false)
  accessPedidos     Boolean  @default(false)
  accessClientes    Boolean  @default(false)
  accessLocutores   Boolean  @default(false)
  accessFornecedores Boolean  @default(false)
  accessFaturamento Boolean  @default(false)
  accessRelatorios  Boolean  @default(false)
  accessUsuarios    Boolean  @default(false)

  users             User[]
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

model BackupConfig {
  id                String   @id @default("default")
  endpoint          String
  accessKey         String
  secretKey         String
  bucket            String
  region            String   @default("us-east-1")
  cronSchedule      String   @default("0 3 * * *") // Daily at 3 AM
  keepDays          Int      @default(7)
  enabled           Boolean  @default(true)
  updatedAt         DateTime @updatedAt
}

model BackupLog {
  id                String   @id @default(uuid())
  filename          String
  size              BigInt?
  status            String   // SUCCESS, FAILED
  error             String?  @db.Text
  createdAt         DateTime @default(now())
}
